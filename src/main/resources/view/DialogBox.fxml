<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER_LEFT" spacing="10.0" maxHeight="Infinity" minHeight="-Infinity"
         type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label HBox.hgrow="NEVER" maxWidth="100" prefWidth="100" minWidth="0"/>
        <VBox fx:id="dialogViewBox" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="userName"
                       style="-fx-font-weight: bold; -fx-underline: true; -fx-font-size: 14px;"
                       text="User" wrapText="true"/>
                <Label fx:id="message" VBox.vgrow="ALWAYS" text="Message" wrapText="true" maxHeight="Infinity"/>
            </children>
            <padding>
                <Insets left="10.0" top="15.0"/>
            </padding>
        </VBox>
        <HBox alignment="CENTER_LEFT">
            <ImageView  fx:id="displayPicture"
                        fitHeight="100.0" fitWidth="100.0"
                        pickOnBounds="true" preserveRatio="true"/>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0"/>
    </padding>
</fx:root>