<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leeyiyuan.view.MainWindow">
  <children>
    <ScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS" fitToWidth="true" maxWidth="Infinity">
      <content>
        <VBox fx:id="dialogContainer"/>
      </content>
    </ScrollPane>
    <HBox prefHeight="30.0">
      <TextField fx:id="userInput" onAction="#handleUserInput" HBox.hgrow="ALWAYS" maxHeight="Infinity"/>
      <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" prefWidth="100.0" maxHeight="Infinity" text="Send" />
    </HBox>
  </children>
</VBox>
