<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<fx:root type="HBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <TextFlow fx:id="title" />
            <TextFlow fx:id="body" />
         </children>
      </VBox>
   </children>
   <effect>
      <DropShadow blurType="GAUSSIAN" color="#00000033" height="20.0" offsetX="5.0" offsetY="5.0" radius="20" width="20.0" />
   </effect>
</fx:root>
