<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0"
            prefWidth="400.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="weijie.duke.controllers.MainWindowController">

    <TextField fx:id="userInput"
               layoutY="558.0"
               onAction="#handleUserInput"
               prefHeight="41.0"
               prefWidth="324.0"
               AnchorPane.bottomAnchor="1.0"/>

    <Button layoutX="324.0"
            layoutY="558.0"
            mnemonicParsing="false"
            onAction="#handleUserInput"
            prefHeight="41.0"
            prefWidth="76.0"
            text="Send"
            style="-fx-background-color: lightgray"/>

    <ScrollPane fx:id="scrollPane"
                hbarPolicy="NEVER"
                hvalue="1.0"
                prefHeight="557.0"
                prefWidth="400.0"
                vvalue="1.0">

        <padding>
            <Insets bottom="5.0"
                    left="5.0"
                    right="5.0"
                    top="5.0"/>
        </padding>

        <VBox fx:id="dialogContainer"
              prefHeight="552.0"
              prefWidth="388.0"
              spacing="5.0"/>

    </ScrollPane>

</AnchorPane>
